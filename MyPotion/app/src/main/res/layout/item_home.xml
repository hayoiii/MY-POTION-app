<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/margin_padding_global"
    android:padding="@dimen/margin_padding_global"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/home_item_alias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:layout_weight="1"
            tools:text="건강기능식품 별칭" />


        <TextView
            android:id="@+id/home_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondary_light"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_info_title"
            tools:text="TODAY" />

    </LinearLayout>
    <TextView
        android:id="@+id/home_item_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_text"
        android:layout_marginRight="80dp"
        android:lines="2"
        android:textColor="@color/secondary_text"
        tools:text="제조사 명 "
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_item_label"
        tools:layout_editor_absoluteX="8dp" />

</LinearLayout>

